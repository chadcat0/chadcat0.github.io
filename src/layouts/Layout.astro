---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />

        <!-- Primary Meta Tags -->
        <title>{title}</title>
        <link
            rel="sitemap"
            type="application/xml"
            title="Sitemap"
            href="/sitemap-index.xml"
        />
        <meta name="title" content={title} />
        <meta name="description" content={description} />

        <!-- Favicons -->

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content="https://namishh.me/cat.gif" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content="https://namishh.me/cat.gif" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <script defer src="https://unpkg.com/@phosphor-icons/web"></script>
        <script src="https://platform.twitter.com/widgets.js"></script>
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <meta name="generator" content={Astro.generator} />
        <meta
            http-equiv="Content-Security-Policy"
            content="default-src * self blob: data: gap:; style-src * self 'unsafe-inline' blob: data: gap:; script-src * 'self' 'unsafe-eval' 'unsafe-inline' blob: data: gap:; object-src * 'self' blob: data: gap:; img-src * self 'unsafe-inline' blob: data: gap:; connect-src self * 'unsafe-inline' blob: data: gap:; frame-src * self blob: data: gap:;"
        />
        <title>{title}</title>
    </head>
    <body class="bg-bg overflow-x-hidden">
        <Navbar />
        <slot />
        <div class="flex w-full my-4 justify-center">
            <div
                class="md:w-2/3 text-bright py-4 px-4 md:px-6 w-full flex flex-col sm:flex-row items-center justify-between lg:w-1/2"
            >
                <p class="text-center my-2 md:my-0">
                    ( っ˶´ ˘ `)っ made out of boredom and ❤️ by nam
                </p>
                <p>
                    made with <a
                        href="https://astro.build"
                        target="_blank"
                        class="underline text-fg">astro</a
                    >
                </p>
            </div>
        </div>
    </body>
    <style is:global>
        :root {
            /* Control the padding inside the Tweet card. */
            --tc-padding: 2em;
            /* Set the border color of the Tweet card. */
            --tc-border-color: #cfd9de;

            --tc-background-color: #000;
        }

        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-family: Geist;
        }
        *::-webkit-scrollbar {
            width: 15px;
            background: #090909;
        }

        *::-webkit-scrollbar-thumb {
            background-color: #222;
            border-radius: 3px;
        }

        @font-face {
            font-family: "Geist";
            src: url("/fonts/Geist-Regular.ttf") format("truetype");
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: "Geist Light";
            src: url("/fonts/Geist-Light.ttf") format("truetype");
            font-weight: lighter;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: "Iosevka";
            src: url("/fonts/Iosevka.ttf") format("truetype");
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }

        /*   :root { */
        /*     --astro-code-color-text: #dee1e6; */
        /*     --astro-code-color-background: #060606; */
        /*     --astro-code-token-constant: #d466e9; */
        /*     --astro-code-token-string: #56966e; */
        /*     --astro-code-token-comment: #485263; */
        /*     --astro-code-token-keyword: #c14d53; */
        /*     --astro-code-token-parameter: #c14d53; */
        /*     --astro-code-token-function: #6a9f98; */
        /*     --astro-code-token-string-expression: #56966e; */
        /*     --astro-code-token-punctuation: #dee1e6; */
        /*     --astro-code-token-link: #dee1e6; */
        /* } */
    </style>
</html>
