---
import Layout from "../layouts/Layout.astro";

const skills = ["Full Stack", "UI/UX", "Low Level", "Discord Bots"];

const languages = [
    "HTML",
    "CSS",
    "SASS",
    "JavaScript",
    "TypeScript",
    "Golang",
    "Rust",
    "Lua",
    "C",
    "Python",
];

const databases = [
    "Firebase",
    "MongoDB",
    "SQLite",
    "MySQL",
    "Postgres",
    "Drizzle",
    "Prisma",
    "Diesel",
];

const webframeworks = [
    "WASM",
    "HTMX",
    "React",
    "NextJS",
    "RemixJS",
    "Vue",
    "Svelte",
    "SvelteKit",
    "Astro",
    "Flask",
    "Express",
    "Rocket",
    "Actix",
    "Echo",
    "Templ",
];

const discordframeworks = ["Discord.js", "Discord.py", "Concord", "Serenity"];

import Quote from "../components/Quote.astro";
---

<Layout title="about nam" description="nam's personal website and blog.">
    <div class="w-full flex justify-center md:py-8 flex-col items-center gap-2">
        <div class="md:w-2/3 py-4 px-4 w-full lg:w-1/2 flex-col">
            <div class="flex flex-wrap gap-4 items-end justify-between">
                <div class="flex gap-4 items-center">
                    <img
                        src="https://avatars.githubusercontent.com/u/68964499?v=4"
                        alt="pfp"
                        class="h-12 w-12 rounded-full border-[1px] border-fg"
                    />
                    <h1 class="text-3xl text-left text-fg self-end">Namish</h1>
                    <h1 class="text-lg text-gray-500 text-left self-end">
                        17M (he/him)
                    </h1>
                </div>
                <p class="text-lg text-gray-500">
                    num-ish â‹… mythological god (south east asia)
                </p>
            </div>
            <p class="mt-8 text-[18px] md:text-[20px] text-bright">
                Introverted silly dude, currently in my last year of school,
                aiming to major in Computer Science. Loves to program everything
                in anything. Hobbies also include writing poems playing the
                piano. Enjoys programming and not <a
                    class="text-fg underline"
                    href="/blog/tryhard-to-enjoyer">tryhards</a
                > it.
            </p>
            <div class="mt-8 h-[2px] px-16 bg-bg3 inline-block"></div>
            <h1 class="text-xl text-fg mt-8 mb-2">
                <span class="text-gray-500">Skill</span> Set
            </h1>
            <div class="flex flex-wrap gap-4">
                {
                    skills.map((i, j) => {
                        return (
                            <p class="mt-2  bg-mbg text-fg px-4 py-2 rounded-md">
                                {i}
                            </p>
                        );
                    })
                }
            </div>
            <h1 class="text-xl text-fg mt-8 mb-2">
                <span class="text-gray-500">Languages</span> I Know
            </h1>
            <div class="flex flex-wrap gap-4">
                {
                    languages.map((i, j) => {
                        return (
                            <p class="mt-2  bg-mbg text-fg px-4 py-2 rounded-md">
                                {i}
                            </p>
                        );
                    })
                }
            </div>
            <h1 class="text-xl text-fg mt-8 mb-2">
                <span class="text-gray-500">Databases &</span> ORMS
            </h1>
            <div class="flex flex-wrap gap-4">
                {
                    databases.map((i, j) => {
                        return (
                            <p class="mt-2  bg-mbg text-fg px-4 py-2 rounded-md">
                                {i}
                            </p>
                        );
                    })
                }
            </div>
            <h1 class="text-xl text-fg mt-8 mb-2">
                <span class="text-gray-500">Web</span> Tech
            </h1>
            <div class="flex flex-wrap gap-4">
                {
                    webframeworks.map((i, j) => {
                        return (
                            <p class="mt-2  bg-mbg text-fg px-4 py-2 rounded-md">
                                {i}
                            </p>
                        );
                    })
                }
            </div>
            <h1 class="text-xl text-fg mt-8 mb-2">
                <span class="text-gray-500">Discord</span> Framewords
            </h1>
            <div class="flex flex-wrap gap-4">
                {
                    discordframeworks.map((i, j) => {
                        return (
                            <p class="mt-2  bg-mbg text-fg px-4 py-2 rounded-md">
                                {i}
                            </p>
                        );
                    })
                }
            </div>
            <div class="mt-8 h-[2px] px-16 bg-bg3 inline-block"></div>
            <h1 class="text-xl md:text-2xl text-fg mt-8 mb-2">
                <span class="text-gray-500">My</span> Setup
            </h1>
            <ul
                class="list-decimal leading-[2.6rem] list-inside mt-4 text-[16px] md:text-[18px] text-bright"
            >
                <li>
                    Operating System: <span class="text-fg">Arch // Nix OS</span
                    >
                </li>
                <li>
                    Window Managers: <span class="text-fg"
                        >awesomewm // swayfx</span
                    >
                </li>
                <li>
                    Terminal & Shell: <span class="text-fg"
                        >wezterm with bash</span
                    >
                </li>
                <li>Code Editor: <span class="text-fg">Neovim // Zed</span></li>
            </ul>
            <div class="mt-8 h-[2px] px-16 bg-bg3 inline-block"></div>
            <h1 class="text-xl md:text-2xl text-fg mt-8 mb-2">
                <span class="text-gray-500">Testimonial</span>
            </h1>
            <Quote />
        </div>
    </div>
</Layout>
