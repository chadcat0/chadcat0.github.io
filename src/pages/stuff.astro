---

<Layout title="nam's experiments" description="List of personal projects">
    <div
        class="text-slate-50 py-2 sm:py-8 md:py-8 lg:py-4 text-lg leading-10"

    >
        <section class="flex flex-col items-center justify-center w-full">
            <h1
                class="text-xl sm:text-2xl  xs:my-8 my-2 mb-4 px-4 font-serif text-neutral-500 w-full lg:w-1/2 md:w-2/3 text-left"
                
            >
                flora<span class="text-fg font-serif">org</span>
            </h1>
            <div class="flex flex-wrap w-full lg:w-1/2 md:w-2/3">
                {
                    flora.map((i, j) => (
                        <Project name={i.name} link={i.link} desc={i.desc} tech={i.tech} index={j} />
                      
                    ))
                }
            </div>
        </section>
        <section class="flex flex-col items-center justify-center w-full">
            <h1
                class="text-xl sm:text-2xl  xs:my-8 my-2 mb-4 px-4 font-serif text-neutral-500 w-full lg:w-1/2 md:w-2/3 text-left"
                
